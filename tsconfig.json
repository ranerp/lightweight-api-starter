{
    "compilerOptions": {
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "module": "commonjs",
        "target": "ES6",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "./src",
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "object-literal-sort-keys": false
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
